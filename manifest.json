{
  "manifest_version": 3,
  "name": "WhatsApp Copilot",
  "version": "1.0.0",
  "description": "Suggest messages for your clients context",
  "icons": {
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "permissions": ["activeTab", "scripting", "storage", "sidePanel", "tabs"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/logo.png",
      "128": "images/logo.png"
    },
    "default_title": "Abrir painel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
